<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "edit_history" %>
<% end %>

<h2>編集履歴一覧</h2>

<table>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>リスト名</th>
      <th>アイテム名</th>
      <th>アクション</th>
      <th>日時</th>
    </tr>
  </thead>
  <tbody>
    <% @edit_histories.each do |history| %>
      <tr>
        <td><%= history.user.name %></td>
        <td><%= history.list_title %></td>
        <td><%= history.item&.name || "-" %></td>
        <td class="<%= history.action %>">
          <%= t("enums.edit_history.action.#{history.action}") %>
        </td>
        <td><%= history.created_at.strftime("%-m月%-d日 %-H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "カレンダーに戻る", calendar_path %>