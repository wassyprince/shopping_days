<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "calendar" %>
<% end %>

<div class="calendar-page">

  

  <!-- сЃГсѓ░сѓбсѓдсЃѕсЃюсѓ┐сЃ│ -->
  <a href="<%= destroy_user_session_path %>"
     data-turbo-method="delete"
     class="logout-btn">
     сЃГсѓ░сѓбсѓдсЃѕ
  </a>

  <h1>сѓФсЃгсЃ│сЃђсЃ╝</h1>

  <%= month_calendar class: "simple-calendar", events: @events, start_day: :sunday do |date, events_for_date| %>
  <% day_class = "day" %>
  <% day_class += " today" if date == Date.today %>
  <% day_class += "sunday" if date.sunday? %>
  <% day_class += "saturday" if date.saturday? %>
  <% day_class += "other-month" if @date && date.month != @date.month %>
  
  <div class="day-cell"
       data-controller="day"
       data-action="click->day#open"
       data-day-date="<%= date %>">
    <div class="<%= day_class %>">
      <%= date.day %>
      <% if @shopping_counts[date].present? %>
        ­ЪЏњ <%= @shopping_counts[date] %>С╗Х
        <%#= link_to "УЕ│у┤░", show_by_date_shopping_lists_path(date: date),
                    data: { turbo_frame: "shopping_list_modal" } %>
      <% else %>
        <span class="no-list">У▓исЂёуЅЕсЃфсѓ╣сЃѕсЂфсЂЌ</span>
      <% end %>
    </div>
  </div>

        <% events_for_date.each do |event| %>
        <div class="event"><%= event[:name] %></div>
        <% end %>
  
  <% end %>
</div>

