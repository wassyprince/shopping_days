<h2>予定を編集</h2>

<%= form_with(model: @plan, local: true) do |form| %>
  <div>
    <%= form.label :title, "タイトル" %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :start_time, "開始時刻" %><br>
    <%= form.datetime_select :start_time %>
  </div>

  <div>
    <%= form.label :end_time, "終了時刻" %><br>
    <%= form.datetime_select :end_time %>
  </div>

  <div>
    <%= form.label :note, "メモ" %><br>
    <%= form.text_area :note %>
  </div>

  <div>
    <%= form.submit "更新する" %>
  </div>
<% end %>

<%= link_to "詳細へ戻る", @plan %>