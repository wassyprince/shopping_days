<h2>買い物リストを作成</h2>

<% if @shopping_list.errors.any? %>
  <ul class="error-messages">
    <% @shopping_list.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @shopping_list, url: shopping_lists_path, method: :post do |f| %>
  <%= f.hidden_field :date %>
  <div>
    <%= f.label :title, "リスト名" %>
    <%= f.text_field :title, placeholder: "例: 今週の買い物" %>
  </div>
  <button type="submit">買い物リストを作成</button>
<% end %>
